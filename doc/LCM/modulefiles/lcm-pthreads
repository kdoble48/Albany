#%Module 1.0

module-whatis "LCM pthreads arch"

setenv ARCH pthreads
setenv ARCH_STRING PTHREADS
setenv ARCH_NAME "POSIX Threads"

setenv LCM_ENABLE_CUDA OFF
setenv LCM_ENABLE_UVM OFF
setenv LCM_ENABLE_KOKKOS_EXAMPLES OFF
setenv LCM_ENABLE_OPENMP OFF
setenv LCM_ENABLE_PTHREADS ON
setenv LCM_ENABLE_CUSPARSE OFF
setenv LCM_PHALANX_INDEX_TYPE "INT"
setenv LCM_KOKKOS_DEVICE "THREAD"
setenv LCM_TPETRA_INST_PTHREAD ON
setenv LCM_ENABLE_HWLOC OFF
setenv LCM_ENABLE_KOKKOS_DEVEL OFF
setenv LCM_ENABLE_SLFAD OFF
