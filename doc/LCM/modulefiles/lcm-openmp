#%Module 1.0

module-whatis "LCM OpenMP arch"

setenv ARCH openmp
setenv ARCH_STRING OPENMP
setenv ARCH_NAME "Open MP"

setenv LCM_ENABLE_CUDA OFF
setenv LCM_ENABLE_UVM OFF
setenv LCM_ENABLE_KOKKOS_EXAMPLES OFF
setenv LCM_ENABLE_OPENMP ON
setenv LCM_ENABLE_PTHREADS OFF
setenv LCM_ENABLE_CUSPARSE OFF
setenv LCM_PHALANX_INDEX_TYPE "INT"
setenv LCM_KOKKOS_DEVICE "OPENMP"
setenv LCM_TPETRA_INST_PTHREAD OFF
setenv LCM_ENABLE_HWLOC OFF
setenv LCM_ENABLE_KOKKOS_DEVEL ON
setenv LCM_ENABLE_SLFAD ON
